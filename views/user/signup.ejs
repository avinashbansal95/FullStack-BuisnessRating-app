
<% layout('layout') %>


    <!-- //original code -->
    

    <% layout('layout') %>
   

<div class="container">
    <br><br>
    <div class="text-center reg_msg">
        <h1><a href="/">RateMe Signup Page</a></h1>
    </div>
   <br><br>


   <div class="col-md-offset-4">
    <a href="/auth/github" class="btn btn-block btn-social btn-github btn-lg">
        <i class="fa fa-github"></i> Sign up with Github
   </a>
</div><br>

   <div class="col-md-offset-4">
    <a href="/auth/linkedin" class="btn btn-block btn-social btn-linkedin btn-lg">
        <i class="fa fa-linkedin"></i> Sign up with Linkedin
   </a>
</div><br>
   
   <div class="col-md-offset-4">
         <a href="/auth/facebook" class="btn btn-block btn-social btn-facebook btn-lg">
            <i class="fa fa-facebook"></i> Sign up with Facebook
        </a>
    </div><br>

    <div class="col-md-offset-4">
        <a href="/auth/google" class="btn btn-block btn-social btn-google btn-lg">
            <i class="fa fa-google-plus" aria-hidden="true"></i> Sign up with Google
       </a>
   </div>


   <div class="text-center reg_msg">
        <h2 class="fancy"><span>Or singup using email and pwd</span></h2>
   </div>

    <div class="row signup">
        
        <% if(hasErrors) {%>
            <% for(var i=0; i<messages.length; i++) {%>
                 <div class="alert alert-danger alert-dismissible" role="alert">
                         <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <%= messages[i] %>
            </div>
             <% } %>
             <% } %>

        <form method="POST" class="" id="signupForm" action="/signup">

            <div class="row">
                <div class="form-group col-xs-12 input_group">
                    <input id="fullname" class="form-control" name="username" type="text" autocomplete="on" placeholder="FULLNAME" style="margin-top: 50px; margin-bottom:20px;" >
                </div>
            </div>

            <div class="form-group input_group">
                <input id="email" class="form-control" name="email" type="text" autocomplete="on" placeholder="EMAIL" style="margin-bottom:20px;">
            </div>

            <div class="form-group input_group">
                <input id="password" class="form-control" name="password" type="password" placeholder="PASSWORD" style="margin-bottom:20px;">
            </div>


            <div class="form-group">
                <input type="submit" id="submit" value="SIGN UP" class="form-control btn btn-primary" name="submit" style="">
            </div>

          </form>

          <div>
              <h6>Already have an account? <a href="/login">Login</a></h6>
          </div>


    </div>
</div>
